<mvc:View
	controllerName="com.bentil.playground.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'com/bentil/playground/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		>
		<content>
	 <Table items="{app>/users}" class=''>
		 <columns>
			 <Column>
			 	<Text text="Name"/>
			 </Column>
			 <Column>
			 	<Text text="Email"/>
			 </Column>
			 <Column>
			 	<Text text="Gender"/>
			 </Column>
			 <Column>
			 	<Text text="Status"/>
			 </Column>
			 <Column>
			 </Column>
		 </columns>
		 <ColumnListItem type="Navigation" press=".onColumnListItemPress">
			 <cells>
				 <Text text="{app>name}"/>
				 <Text text="{app>email}"/>
				 <Text text="{app>gender}"/>
				 <Text text="{app>status}"/>
			 	<Button text='Delete' press='onDeleteBtnPress' icon='sap-icon://delete'/>
			 </cells>
		 </ColumnListItem>
	 </Table>
		</content>
	</Page>

</mvc:View>
