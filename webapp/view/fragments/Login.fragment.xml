<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="idloginDialog"
        title="Login"
    >
        <buttons>
            <Button
                text="Login"
                type="Emphasized"
                press="onLoginBtnPress"
            />
        </buttons>
        <content>
            <VBox width="" class="sapUiContentMargin">
                <f:SimpleForm 
                    editable="true"
                    >
                    <f:content>
                        <Label text="Email"/>
                        <Input value="{app>/login/email}"/>
                        <Label text="Password"/>
                        <Input value="{app>/login/password}" type="Password"/>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <customHeader>
        </customHeader>
    </Dialog>
</c:FragmentDefinition>