<mvc:View
	controllerName="com.bentil.playground.controller.Details"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	core:require="{
		formatter: 'com/bentil/playground/model/formatter'
	}">
    <Page>
        <f:SimpleForm
			adjustLabelSpan="true"
			backgroundDesign="Translucent"
			breakpointL="1024"
			breakpointM="600"
			breakpointXL="1440"
			columnsL="2"
			columnsM="2"
			columnsXL="2"
			editable="true"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			emptySpanXL="-1"
			labelMinWidth="192"
			labelSpanL="4"
			labelSpanM="2"
			labelSpanS="12"
			labelSpanXL="-1"
			layout="ResponsiveLayout"
			maxContainerCols="2"
			minWidth="-1"
			singleContainerFullSize="true"
			width=""
		>
			<f:content>
				<Label text="First Name"/>
                <Input value="{app>/user/firstName}"/>
				<Label text="Last Name"/>
                <Input value="{app>/user/lastName}"/>
				<Label text="Date of Birth"/>
                <DatePicker value="{app>/user/dateOfBirth}"/>
				<Label text="Email"/>
                <Input value="{app>/user/email}"/>
				<Label text="Residence"/>
                <Input value="{app>/user/residence}"/>
				<Label text="Hometown"/>
                <Input value="{app>/user/hometown}"/>
                <Label text="Phone Number"/>
                <Input value="{app>/user/phoneNumber}"/>
                <Label text="Whatsapp Number"/>
                <Input value="{app>/user/whatsappNumber}"/>
                <Label text="Occupation"/>
                <Input value="{app>/user/occupation}"/>
                <Label text="Organisation"/>
                <Input value="{app>/user/organisation}"/>
			</f:content>
			<f:title>
			</f:title>
			<f:toolbar>
			</f:toolbar>
		</f:SimpleForm>
    </Page>
    </mvc:View>